initial = line_command

delimiter = '\r\n'
ws = (' ' | '\t')*

line_command = ~delimiter ws command:cmd ws parameter:param -> receiver.lineReceived(cmd=cmd, param=param)

# supposing the max command length is 6
command = <letter{0,6}>
parameter = <(~delimiter ws anything)*>

line_data = <(~delimiter anything)*>:l delimiter (?(len(l) <= receiver.MAX_LENGTH) -> receiver.lineReceived(line=line)
        | -> receiver.lineLengthExceeded(l))



